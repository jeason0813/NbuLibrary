<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <style type="text/css">
        body {
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .container {
            padding: 19px 29px 29px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }

        .validation-summary-errors, .field-validation-error {
            color: red;
        }

        .required {
            color: red;
        }
    </style>

    <script src="~/Scripts/jquery-1.8.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript">

        $(function () {
            $('[data-val-required]').each(function () {
                var id = $(this).attr('id');
                var $label = $('label[for="' + id + '"]');
                $label.prepend($('<span class="required">*</span>'));
            });
        });
    </script>
    @RenderSection("scripts", false)
</head>
<body>
    <div class="container" style="background-color: #f5f5f5; border-width: 0px">
        <h1 class="brand" href="#">
            <img src="~/Content/images/Nbu%20Logo%20DarkGray.png" />
            НБУ Библиотека <br/>
            <small style="color:#666">Система за електронни библиотечно-информационни услуги</small></h1>
    </div>
    <div class="container">

        @RenderBody()
    </div>
</body>
</html>
